generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id           String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  username     String         @unique
  passwordHash String         @map("password_hash")
  isActive     Boolean        @default(true) @map("is_active")
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")

  sessions     AdminSession[]

  @@map("admins")
}

model AdminSession {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  adminId   String   @db.Uuid @map("admin_id")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  admin     Admin    @relation(fields: [adminId], references: [id], onDelete: Cascade)

  @@index([adminId])
  @@index([expiresAt])
  @@map("admin_sessions")
}

model Activity {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title     String
  date      DateTime @db.Date
  dateLabel String   @map("date_label")
  year      Int
  category  String
  content   String?  @db.Text
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  images    ActivityImage[]

  @@index([year])
  @@index([date])
  @@map("activities")
}

model ActivityImage {
  id         Int      @id @default(autoincrement())
  activityId String   @db.Uuid @map("activity_id")
  imageUrl   String   @map("image_url")
  caption    String?
  sortOrder  Int      @default(0) @map("sort_order")
  createdAt  DateTime @default(now()) @map("created_at")

  activity   Activity @relation(fields: [activityId], references: [id], onDelete: Cascade)

  @@index([activityId, sortOrder])
  @@map("activity_images")
}

model Member {
  id              String                @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  discordId       BigInt?               @unique @map("discord_id")
  displayName     String                @map("display_name")
  username        String?
  avatarUrl       String?               @map("avatar_url")
  discordJoinedAt DateTime?             @map("discord_joined_at")
  isActive        Boolean               @default(true) @map("is_active")
  createdAt       DateTime              @default(now()) @map("created_at")
  updatedAt       DateTime              @updatedAt @map("updated_at")

  fields          MemberActivityField[]

  @@map("members")
}

model ActivityField {
  id         Int                    @id @default(autoincrement())
  code       String                 @unique
  label      String
  sortOrder  Int                    @default(0) @map("sort_order")
  isActive   Boolean                @default(true) @map("is_active")
  createdAt  DateTime               @default(now()) @map("created_at")
  updatedAt  DateTime               @updatedAt @map("updated_at")

  members    MemberActivityField[]

  @@map("activity_fields")
}

model MemberActivityField {
  memberId   String       @db.Uuid @map("member_id")
  fieldId    Int          @map("field_id")
  assignedAt DateTime     @default(now()) @map("assigned_at")

  member     Member       @relation(fields: [memberId], references: [id], onDelete: Cascade)
  field      ActivityField @relation(fields: [fieldId], references: [id], onDelete: Restrict)

  @@id([memberId, fieldId])
  @@index([fieldId])
  @@map("member_activity_fields")
}
